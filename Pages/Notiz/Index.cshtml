        border-radius: 12px;
    }

    .note-date {
        float: none;
        color: #666;
        font-size: 0.85em;
        margin: 4px 0 0 0;
        font-weight: 400;
    }

    .notes-main {
        flex: 1;
        padding: 3rem 3rem 2rem 3rem;
        background: white;
        min-width: 0;
