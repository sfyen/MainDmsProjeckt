        outline: none;
        min-width: 100px;
    }

    .note-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #000;
        background: transparent;
        border: none;
        margin-bottom: 1.5rem;
        line-height: 1.2;
        padding: 0;
        outline: none;
