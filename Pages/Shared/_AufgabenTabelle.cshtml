    .table.sortierbare-tabelle {
        width: 100% !important;
        border-collapse: separate !important;
        border-spacing: 0 !important;
        margin-bottom: 0 !important;
        background-color: white !important;
        border-radius: 0.8rem;
        overflow: hidden;
        border: 1px solid #e0e0e0;
    }

    table.sortierbare-tabelle thead,
    .table.sortierbare-tabelle thead,
    table.sortierbare-tabelle thead tr,
    .table.sortierbare-tabelle thead tr {
        background: linear-gradient(to bottom, #fafafa, #f5f5f5) !important;
    }

    table.sortierbare-tabelle th,
    .table.sortierbare-tabelle th,
    table.sortierbare-tabelle thead th,
    .table.sortierbare-tabelle thead th {
        color: #000 !important;
        background: transparent !important;
        font-weight: 600 !important;
        font-size: 0.85rem !important;
        text-transform: uppercase !important;
        letter-spacing: 0.5px !important;
        padding: 1.2rem 1.5rem !important;
        border-bottom: 2px solid #e0e0e0 !important;
        border-top: none !important;
        cursor: pointer;
        transition: all 0.2s;
    }

    table.sortierbare-tabelle th:hover,
    .table.sortierbare-tabelle th:hover {
        background: #eeeeee !important;
    }

    table.sortierbare-tabelle tbody tr,
    .table.sortierbare-tabelle tbody tr {
        transition: all 0.2s;
        background-color: white !important;
    }

    table.sortierbare-tabelle tbody tr:nth-child(even),
    .table.sortierbare-tabelle tbody tr:nth-child(even) {
        background-color: #fafafa !important;
    }

    table.sortierbare-tabelle tbody tr:hover,
    .table.sortierbare-tabelle tbody tr:hover {
        background-color: #f0f4f8 !important;
        transform: scale(1.001);
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    table.sortierbare-tabelle td,
    .table.sortierbare-tabelle td {
        color: #333 !important;
        background-color: transparent !important;
        padding: 1rem 1.5rem !important;
        border-bottom: 1px solid #f5f5f5 !important;
        vertical-align: middle !important;
    }

    /* Sort Indicators */
    th.asc::after {
        content: " ↑";
        color: #000;
        font-weight: bold;
    }

    th.desc::after {
        content: " ↓";
        color: #000;
        font-weight: bold;
    }

    /* Pagination Styling */
    .pagination-container {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 1rem;
        padding: 1rem 0;
        margin-top: 1rem;
    }

    .pagination-btn {
        background: #000;
        color: white;
        border: none;
        padding: 0.5rem 1.2rem;
        border-radius: 0.5rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
    }

    .pagination-btn:hover:not(:disabled) {
        background: #333;
        transform: translateY(-1px);
    }

    .pagination-btn:disabled {
        background: #ccc;
        cursor: not-allowed;
    }

    .pagination-info {
        color: #666;
        font-weight: 500;
    }

    /* Hide rows by pagination */
    .aufgabe-zeile.hidden-by-pagination {
        display: none !important;
    }

    /* Modern Action Buttons */
    table .btn-success {
        background: #28a745;
        border: 1px solid #28a745;
        color: white;
        padding: 0.5rem 1.2rem;
        font-size: 0.875rem;
        border-radius: 0.5rem;
        font-weight: 600;
        transition: all 0.2s;
    }

    table .btn-success:hover {
        background: #218838;
        border-color: #1e7e34;
        transform: translateY(-1px);
        box-shadow: 0 3px 8px rgba(40,167,69,0.3);
    }

    table .btn-info {
        background: #17a2b8;
        border: 1px solid #17a2b8;
        color: white;
        padding: 0.5rem 1.2rem;
        font-size: 0.875rem;
        border-radius: 0.5rem;
        font-weight: 600;
        transition: all 0.2s;
    }

    table .btn-info:hover {
        background: #138496;
        border-color: #117a8b;
        transform: translateY(-1px);
        box-shadow: 0 3px 8px rgba(23,162,184,0.3);
    }

    /* Status Icons */
    table td .text-success {
        font-size: 1.3rem;
    }

    table td .text-danger {
        font-size: 1.3rem;
    }

    /* Cursor Pointer for Clickable Rows */
    tr.aufgabe-zeile {
        cursor: pointer;
    }

    /* Details Row */
    tr.aufgabe-details {
        display: none;
    }

    tr.aufgabe-details.show {
        display: table-row;
    }

    tr.aufgabe-details td {
        background-color: #f9f9f9;
    }
</style>


@section Scripts {
    <script>
            document.addEventListener('DOMContentLoaded', () => {
                console.log("🚀 DOM geladen");

                
            document.querySelectorAll(".details-button").forEach(btn => {
                btn.addEventListener("click", () => {
                    document.getElementById("modal-titel").textContent = btn.dataset.titel;
                    document.getElementById("modal-beschreibung").textContent = btn.dataset.beschreibung || "-";
                    document.getElementById("modal-faellig").textContent = btn.dataset.faellig;
                    document.getElementById("modal-prio").textContent = btn.dataset.prio;
                    document.getElementById("modal-userrole").textContent = btn.dataset.userrole || "👤 Benutzer";
                    document.getElementById("modal-user").textContent = btn.dataset.user || "-";
                    
                    // Delete button nur für Ersteller anzeigen
                    const currentUserIdJs = '@(currentUserId)';
                    const vonUser = btn.dataset.vonuser;
                    const deleteForm = document.getElementById("deleteForm");
                    
                    console.log(`🔍 Authorization Check: Current=${currentUserIdJs}, Creator=${vonUser}`);
                    
                    // Zuerst alle vorhandenen Submit-Buttons entfernen
                    const existingButtons = deleteForm.querySelectorAll('button[type="submit"]');
                    existingButtons.forEach(b => b.remove());
                    
                    if (currentUserIdJs === vonUser) {
                        // Berechtigt: Button NEU erstellen und anzeigen
                        const deleteButton = document.createElement('button');
                        deleteButton.type = 'submit';
                        deleteButton.className = 'btn btn-danger';
                        deleteButton.innerHTML = '🗑️ Löschen';
                        deleteForm.appendChild(deleteButton);
                        
                        deleteForm.style.display = "block";
                        document.getElementById("delete-id").value = btn.dataset.id;
                        console.log("✅ User IS creator - Delete button created");
                    } else {
                        // NICHT berechtigt: Kein Button, Form verstecken
                        deleteForm.style.display = "none";
                        document.getElementById("delete-id").value = "";
                        console.log("❌ User is NOT creator - No delete button");
                        
                        // Form komplett deaktivieren
                        deleteForm.onsubmit = (e) => {
                            e.preventDefault();
                            alert("Sie haben keine Berechtigung, diese Aufgabe zu löschen!");
                            return false;
                        };
                    }
                    
                    // Dateien anzeigen
                    document.getElementById("modal-dateien").innerHTML = "";
                    if (btn.dataset.dateien) {
                        const files = btn.dataset.dateien.split(";");
                        files.forEach(f => {
                            const parts = f.split("|");
                            const [id, name, url] = parts;
                            if (name && url) {
                                const li = `<li>
                                    <a href="${url}" target="_blank" download="${name}" class="text-info text-decoration-none">📎 ${name}</a>
                                </li>`;
                                document.getElementById("modal-dateien").innerHTML += li;
                            }
                        });
                    } else {
                        document.getElementById("modal-dateien").innerHTML = "<em>Keine Dateien</em>";
                    }
                });
            });

                // ✅ Erledigt-Button (AJAX-Submit)


                // ✅ Tabellen-Sortierung
                   document.querySelectorAll('table.sortierbare-tabelle').forEach(table => {
            const headers = table.querySelectorAll('th[data-column]');
            let currentSort = { column: null, asc: true };

            headers.forEach(header => {
                header.style.cursor = "pointer";
                header.addEventListener("click", () => {
                    const column = header.getAttribute("data-column");
                    const asc = currentSort.column === column ? !currentSort.asc : true;
                    currentSort = { column, asc };

                    headers.forEach(h => h.classList.remove("asc", "desc"));
                    header.classList.add(asc ? "asc" : "desc");

                    const rows = Array.from(table.querySelector("tbody").rows);
                    const filteredRows = rows.filter(r => !r.classList.contains("aufgabe-details"));
                    const index = header.cellIndex;

                    filteredRows.sort((a, b) => {
                        const getText = row => row.cells[index].textContent.trim();
                        let valA = getText(a), valB = getText(b);

                        switch (column) {
                            case "faellig":
                                valA = new Date(valA || "1970-01-01");
                                valB = new Date(valB || "1970-01-01");
                                return asc ? valA - valB : valB - valA;
                            case "prio":
                                return asc ? parseInt(valA) - parseInt(valB) : parseInt(valB) - parseInt(valA);
                            case "erledigt":
                                valA = valA.includes("✅") ? 1 : 0;
                                valB = valB.includes("✅") ? 1 : 0;
                                return asc ? valA - valB : valB - valA;
                            default:
                                return asc ? valA.localeCompare(valB) : valB.localeCompare(valA);
                        }
                    });

                    const tbody = table.querySelector("tbody");
                    filteredRows.forEach(row => {
                        const detailRow = row.nextElementSibling?.classList.contains("aufgabe-details")
                            ? row.nextElementSibling
                            : null;
                        tbody.appendChild(row);
                        if (detailRow) tbody.appendChild(detailRow);
                    });
                });
            });
        });
            });

        document.addEventListener("DOMContentLoaded", () => {
            console.log("🔥 JS läuft");

            document.querySelectorAll('.erledigt-button').forEach(button => {
                button.addEventListener('click', async (e) => {
                    const form = e.target.closest("form");
                    const formData = new FormData(form);
                    const url = window.location.pathname + "?handler=Erledigt";

                    console.log("🧠 Sende an:", url);
                    console.log("📦 Form-Daten:", [...formData.entries()]);

                    try {
                        const res = await fetch(url, {
                            method: 'POST',
                            body: formData,
                            headers: {
                                'X-Requested-With': 'XMLHttpRequest' // 👈 optional: zur Erkennung von AJAX
                            }
                        });

                        if (res.ok) {
                            form.closest("td").innerHTML = "<span class='text-success'>✅</span>";

                            if (typeof toastr !== 'undefined') {
                                toastr.success("Aufgabe erledigt!");
                            } else {
                                alert("✅ erledigt");
                            }
                        } else {
                            const err = await res.text();
                            console.error("❌ Fehler-Response:", err);
                            toastr?.error("Fehler beim Speichern");
                        }
                    } catch (err) {
                        console.error("❌ Netzwerkfehler:", err);
                        toastr?.error("Netzwerkfehler");
                    }
                });
            });
        });
               
    </script>
    

    <!-- Pagination Script -->
   
}

