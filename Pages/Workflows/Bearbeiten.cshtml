    .step-meta-due {
        font-size: 0.92rem;
        color: #333;
    }

    .step-meta-user strong,
    .step-meta-due strong {
        color: #000;
    }

    /* Buttons */
    .btn {
        border-radius: 0.5rem;
        font-weight: 600;
        transition: all 0.2s;
    }

    .btn-outline-primary {
        border-color: #000;
        color: #000;
        border-width: 1.5px;
    }

    .btn-outline-primary:hover {
        background-color: #000;
