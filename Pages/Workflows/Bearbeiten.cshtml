    }

    .btn-outline-danger:hover {
        background-color: #dc3545;
        color: white;
    }

    .btn-success {
        background-color: #000;
        border: none;
        color: white;
        padding: 0.75rem 2rem;
    }

    .btn-success:hover {
        background-color: #333;
