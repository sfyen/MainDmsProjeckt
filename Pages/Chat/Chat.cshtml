                } else if (sameAsPrevious && sameAsNext) {
                    // Middle message in a group
                    groupClass = "middle-in-group";
                    showName = false;
                    showAvatar = false;
                } else if (sameAsPrevious && !sameAsNext) {
                    // Last message in a group
                    groupClass = "last-in-group";
                    showName = false;
                    showAvatar = !isMe && isGroupChat; // Only in group chats
