                // Break grouping if date changed (different day)
                if (previous) {
                    const prevDate = new Date(previous.sentAt);
                    const currDate = new Date(current.sentAt);
                    const prevDateKey = prevDate.toDateString();
                    const currDateKey = currDate.toDateString();
                    
                    if (prevDateKey !== currDateKey) {
                        sameAsPrevious = false; // Different day = new group
                    }
                    
                    // Break grouping if time difference is more than 5 minutes
                    const timeDiff = (currDate - prevDate) / 1000 / 60; // minutes
                    if (timeDiff > 5) {
                        sameAsPrevious = false; // Long delay = new group
                    }
                }

                // Check time difference with next message
                if (next) {
                    const currDate = new Date(current.sentAt);
                    const nextDate = new Date(next.sentAt);
                    const currDateKey = currDate.toDateString();
                    const nextDateKey = nextDate.toDateString();
                    
