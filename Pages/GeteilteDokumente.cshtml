@page
@model GeteilteDokumenteModel
@{
    ViewData["Title"] = "Geteilte Dokumente";
}

<div class="modern-page-wrapper">
    <!-- Modern Header Section -->
    <div style="text-align:center; margin-bottom:3rem; padding-bottom:2rem; border-bottom:1px solid #f0f0f0;">
        <h2 style="color:#000; font-size:2rem; margin-bottom:0.5rem;">📂 Geteilte Dokumente</h2>
        <p style="color:#666; font-size:1rem; margin:0;">Verwalte geteilte Dokumente und Notizen</p>
    </div>

    <!-- Modern Tabs -->
    <ul class="nav nav-tabs modern-tabs" id="sharedTabs" role="tablist">
        <li class="nav-item">
            <button class="nav-link active" id="docs-byme-tab" data-bs-toggle="tab" data-bs-target="#docs-byme" type="button" role="tab">
                📤 Dokumente – von mir
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link" id="docs-withme-tab" data-bs-toggle="tab" data-bs-target="#docs-withme" type="button" role="tab">
                📥 Dokumente – mit mir
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link" id="notes-byme-tab" data-bs-toggle="tab" data-bs-target="#notes-byme" type="button" role="tab">
                📤 Notizen – von mir
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link" id="notes-withme-tab" data-bs-toggle="tab" data-bs-target="#notes-withme" type="button" role="tab">
                📥 Notizen – mit mir
            </button>
        </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content" style="margin-top:2rem;">

        <!-- Dokumente – von mir -->
        <div class="tab-pane fade show active" id="docs-byme" role="tabpanel">
            <div class="modern-section">
                <h3 style="color:#000; font-size:1.2rem; margin-bottom:1.5rem; font-weight:600;">Von mir geteilte Dokumente</h3>
                <div class="modern-table-wrapper">
                    <table class="modern-table">
                        <thead>
                            <tr>
                                <th>Dokument</th>
                                <th>Geteilt mit</th>
                                <th>Datum</th>
                                <th style="text-align:right;">Aktion</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var doc in Model.DocumentsSharedByMe)
                            {
                                <tr>
                                    <td><strong>@doc.DokumentTitle</strong></td>
                                    <td>@doc.SharedByUserName</td>
                                    <td>@doc.SharedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td style="text-align:right;">
                                        <a href="@doc.ObjectPath" class="modern-btn-small">Anzeigen</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                @if (!Model.DocumentsSharedByMe.Any())
                {
                    <div class="empty-state">
                        <p>📭 Keine geteilten Dokumente gefunden.</p>
                    </div>
                }
            </div>
        </div>

        <!-- Dokumente – mit mir -->
        <div class="tab-pane fade" id="docs-withme" role="tabpanel">
            <div class="modern-section">
                <h3 style="color:#000; font-size:1.2rem; margin-bottom:1.5rem; font-weight:600;">Mit mir geteilte Dokumente</h3>
                <div class="modern-table-wrapper">
                    <table class="modern-table">
                        <thead>
                            <tr>
                                <th>Dokument</th>
                                <th>Geteilt von</th>
                                <th>Datum</th>
                                <th style="text-align:right;">Aktion</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var doc in Model.DocumentsSharedWithMe)
                            {
                                <tr>
                                    <td><strong>@doc.DokumentTitle</strong></td>
                                    <td>@doc.SharedByUserName</td>
                                    <td>@doc.SharedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td style="text-align:right;">
                                        <a href="@doc.ObjectPath" class="modern-btn-small">Anzeigen</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                @if (!Model.DocumentsSharedWithMe.Any())
                {
                    <div class="empty-state">
                        <p>📭 Keine Dokumente wurden mit dir geteilt.</p>
                    </div>
                }
            </div>
        </div>

        <!-- Notizen – von mir -->
        <div class="tab-pane fade" id="notes-byme" role="tabpanel">
            <div class="modern-section">
                <h3 style="color:#000; font-size:1.2rem; margin-bottom:1.5rem; font-weight:600;">Von mir geteilte Notizen</h3>
                <div class="modern-table-wrapper">
                    <table class="modern-table">
                        <thead>
                            <tr>
                                <th>Notiz</th>
                                <th>Geteilt mit</th>
                                <th>Datum</th>
                                <th style="text-align:right;">Aktion</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var note in Model.NotesSharedByMe)
                            {
                                <tr>
                                    <td><strong>@note.NoteTitle</strong></td>
                                    <td>@note.SharedUserName</td>
                                    <td>@note.SharedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td style="text-align:right;">
                                        <a href="@note.ObjectPath" class="modern-btn-small">Anzeigen</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                @if (!Model.NotesSharedByMe.Any())
                {
                    <div class="empty-state">
                        <p>📭 Keine geteilten Notizen gefunden.</p>
                    </div>
                }
            </div>
        </div>

        <!-- Notizen – mit mir -->
        <div class="tab-pane fade" id="notes-withme" role="tabpanel">
            <div class="modern-section">
                <h3 style="color:#000; font-size:1.2rem; margin-bottom:1.5rem; font-weight:600;">Mit mir geteilte Notizen</h3>
                <div class="modern-table-wrapper">
                    <table class="modern-table">
                        <thead>
                            <tr>
                                <th>Notiz</th>
                                <th>Geteilt von</th>
                                <th>Datum</th>
                                <th style="text-align:right;">Aktion</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var note in Model.NotesSharedWithMe)
                            {
                                <tr>
                                    <td><strong>@note.NoteTitle</strong></td>
                                    <td>@note.SharedUserName</td>
                                    <td>@note.SharedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td style="text-align:right;">
                                        <a href="@note.ObjectPath" class="modern-btn-small">Anzeigen</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                @if (!Model.NotesSharedWithMe.Any())
                {
                    <div class="empty-state">
                        <p>📭 Keine Notizen wurden mit dir geteilt.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .modern-page-wrapper {
        background: white;
        border-radius: 1.1rem;
        box-shadow: 0 2px 12px rgba(0,0,0,0.08);
        padding: 2.5rem 2rem;
        margin: 2rem 0;
    }

    /* Modern Tabs */
    .modern-tabs {
        border: none;
        display: flex;
        gap: 0.5rem;
        margin-bottom: 0;
        flex-wrap: wrap;
    }

    .modern-tabs .nav-item {
        margin: 0;
    }

    .modern-tabs .nav-link {
        background: #f5f5f5;
        color: #666;
        border: none;
        border-radius: 0.5rem;
        padding: 0.7rem 1.5rem;
        font-size: 1rem;
        font-weight: 500;
        transition: all 0.2s;
        border: 2px solid transparent;
        white-space: nowrap;
    }

    .modern-tabs .nav-link:hover {
        background: #e8e8e8;
        color: #000;
    }

    .modern-tabs .nav-link.active {
        background: #000;
        color: white;
        border: 2px solid #000;
    }

    /* Modern Section */
    .modern-section {
        padding: 1.5rem 0;
    }

    /* Modern Table */
    .modern-table-wrapper {
        overflow: hidden;
        border-radius: 0.8rem;
        border: 1px solid #e0e0e0;
    }

    .modern-table {
        width: 100%;
        border-collapse: collapse;
        background: white;
    }

    .modern-table thead {
        background: #f5f5f5;
    }

    .modern-table thead th {
        padding: 1rem 1.2rem;
        text-align: left;
        font-weight: 600;
        color: #000;
        font-size: 0.95rem;
        border-bottom: 2px solid #e0e0e0;
    }

    .modern-table tbody td {
        padding: 1rem 1.2rem;
        color: #333;
        border-bottom: 1px solid #f0f0f0;
    }

    .modern-table tbody tr:last-child td {
        border-bottom: none;
    }

    .modern-table tbody tr:hover {
        background: #fafafa;
    }

    /* Modern Button Small */
    .modern-btn-small {
        background: #000;
        color: white;
        padding: 0.5rem 1.2rem;
        border-radius: 0.5rem;
        text-decoration: none;
        font-size: 0.9rem;
        font-weight: 500;
        display: inline-block;
        transition: all 0.2s;
    }

    .modern-btn-small:hover {
        background: #333;
        transform: translateY(-1px);
        box-shadow: 0 2px 8px rgba(0,0,0,0.15);
        color: white;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 3rem 2rem;
        background: #f9f9f9;
        border-radius: 0.8rem;
        border: 1px dashed #ddd;
    }

    .empty-state p {
        color: #666;
        font-size: 1.1rem;
        margin: 0;
    }
</style>
