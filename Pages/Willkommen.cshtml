@page
@using Microsoft.AspNetCore.Identity
@using DmsProjeckt.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@model DmsProjeckt.Pages.WillkommenModel
@{
    ViewData["HideSidebar"] = true;
    var isAuthenticated = User.Identity?.IsAuthenticated ?? false;
}
<div class="welcome-page">
    <!-- HERO SECTION -->
    <section class="hero-modern">
        <div class="hero-background"></div>
        <div class="container hero-content">
            <div class="hero-badge">
                <i class="bi bi-stars"></i>
                <span>Dokumentenmanagement der nächsten Generation</span>
            </div>
            <h1 class="hero-title">
                Willkommen bei <span class="gradient-text">DMS</span>
            </h1>
            <p class="hero-subtitle">
                Verwalte deine Dokumente einfach, sicher und intelligent an einem Ort.<br />
                Modernste Technologie trifft auf intuitive Bedienung.
            </p>
            <div class="hero-buttons">
                @if (isAuthenticated)
                {
                    <a class="btn-cyber btn-primary" href="/Dashboard">
                        <span>Zum Dashboard</span>
                        <i class="bi bi-speedometer2"></i>
                    </a>
                }
                else
                {
                    <a class="btn-cyber btn-primary" href="/Identity/Account/Login?ReturnUrl=%2FDashboard">
                        <span>Anmelden</span>
                        <i class="bi bi-arrow-right"></i>
                    </a>
                    <a class="btn-cyber btn-secondary" href="/Identity/Account/Register">
                        <span>Konto erstellen</span>
                        <i class="bi bi-person-plus"></i>
                    </a>
                }
            </div>
            <div class="hero-stats">
                <div class="stat-item">
                    <div class="stat-number">10K+</div>
                    <div class="stat-label">Dokumente verwaltet</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">99.9%</div>
                    <div class="stat-label">Uptime</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">24/7</div>
                    <div class="stat-label">Support</div>
                </div>
            </div>
        </div>
        <div class="floating-elements">
            <div class="float-element float-1"></div>
            <div class="float-element float-2"></div>
            <div class="float-element float-3"></div>
        </div>
    </section>
    <!-- ABOS SECTION -->
    <section class="pricing-section">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">Wähle dein perfektes <span class="gradient-text">Abo</span></h2>
                <p class="section-subtitle">Flexible Preise für jede Unternehmensgröße</p>
            </div>

            <div class="pricing-grid">
                <!-- FREE PLAN -->
                <div class="pricing-card">
                    <div class="card-header">
                        <div class="plan-icon">
                            <i class="bi bi-box"></i>
                        </div>
                        <h3>Free</h3>
                        <div class="plan-badge">Starter</div>
                    </div>
                    <div class="price-section">
                        <span class="currency">€</span>
                        <span class="amount">0</span>
                        <span class="period">/ kostenlos</span>
                    </div>
                    <ul class="features-list">
                        <li><i class="bi bi-check-circle-fill"></i> 1 Benutzer</li>
                        <li><i class="bi bi-check-circle-fill"></i> 50 Dokumente</li>
                        <li><i class="bi bi-check-circle-fill"></i> Basis-Support</li>
                        <li><i class="bi bi-check-circle-fill"></i> 2GB Speicher</li>
                        <li class="disabled"><i class="bi bi-x-circle"></i> Erweiterte Sicherheit</li>
                    </ul>
                    <a href="/Identity/Account/Register" class="btn-plan btn-outline">
                        <span>Jetzt starten</span>
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
                <!-- PRO PLAN -->
                <div class="pricing-card featured">
                    <div class="popular-badge">
                        <i class="bi bi-star-fill"></i>
                        <span>Beliebteste Wahl</span>
                    </div>
                    <div class="card-header">
                        <div class="plan-icon">
                            <i class="bi bi-rocket"></i>
                        </div>
                        <h3>Pro</h3>
                        <div class="plan-badge">Professionell</div>
                    </div>
                    <div class="price-section">
                        <span class="currency">€</span>
                        <span class="amount">9,99</span>
                        <span class="period">/ Monat</span>
                    </div>
                    <ul class="features-list">
                        <li><i class="bi bi-check-circle-fill"></i> 5 Benutzer</li>
                        <li><i class="bi bi-check-circle-fill"></i> Unbegrenzte Dokumente</li>
                        <li><i class="bi bi-check-circle-fill"></i> Priorisierter Support</li>
                        <li><i class="bi bi-check-circle-fill"></i> 50GB Speicher</li>
                        <li><i class="bi bi-check-circle-fill"></i> API-Zugang</li>
                    </ul>
                    <a href="/Identity/Account/Register" class="btn-plan btn-gradient">
                        <span>Auswählen</span>
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
                <!-- ENTERPRISE PLAN -->
                <div class="pricing-card">
                    <div class="card-header">
                        <div class="plan-icon">
                            <i class="bi bi-building"></i>
                        </div>
                        <h3>Enterprise</h3>
                        <div class="plan-badge">Unternehmen</div>
                    </div>
                    <div class="price-section">
                        <span class="currency">€</span>
                        <span class="amount">49,99</span>
                        <span class="period">/ Monat</span>
                    </div>
                    <ul class="features-list">
                        <li><i class="bi bi-check-circle-fill"></i> Unbegrenzte Benutzer</li>
                        <li><i class="bi bi-check-circle-fill"></i> Erweiterte Sicherheit</li>
                        <li><i class="bi bi-check-circle-fill"></i> 24/7 Premium Support</li>
                        <li><i class="bi bi-check-circle-fill"></i> Unbegrenzter Speicher</li>
                        <li><i class="bi bi-check-circle-fill"></i> White-Label Option</li>
                    </ul>
                    <a href="/Identity/Account/Register" class="btn-plan btn-outline">
                        <span>Kontakt aufnehmen</span>
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </section>
    <!-- CTA SECTION -->
    <section class="cta-section">
        <div class="container">
            <div class="cta-card">
                <div class="cta-content">
                    <h2>Bereit für dein <span class="gradient-text">DMS</span>?</h2>
                    <p>Starte jetzt mit deinem persönlichen Dokumenten-Management-System und erlebe die Zukunft der Dokumentenverwaltung.</p>
                </div>
                <div class="cta-action">
                    @if (isAuthenticated)
                    {
                        <a href="/Dashboard" class="btn-cta">
                            <i class="bi bi-speedometer2"></i>
                            <span>Zum Dashboard</span>
                        </a>
                    }
                    else
                    {
                        <a href="/Identity/Account/Login" class="btn-cta">
                            <i class="bi bi-box-arrow-in-right"></i>
                            <span>Anmelden und starten</span>
                        </a>
                    }
                </div>
            </div>
        </div>
    </section>
</div>
<style>
    @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap');

    :root {
        --primary: #0d6efd;
        --secondary: #6c757d;
        --dark: #000000;
        --light: #f5f7fa;
        --card-bg: #ffffff;
        --text-main: #000000;
        --text-muted: #555555;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Inter', sans-serif;
    }
    /* ===================== OVERRIDE LAYOUT FÜR FULLSCREEN ===================== */
    /* Verstecke nur die linke Navigations-Sidebar */
    body {
        overflow-x: hidden;
        background-color: var(--light) !important;
        color: var(--text-main) !important;
    }
        /* Entferne Sidebar-Spacing vom Body */
        body.sb-nav-fixed {
            padding-left: 0 !important;
        }
    /* Verstecke die Sidebar Navigation */
    #layoutSidenav_nav,
    .sb-sidenav {
        display: none !important;
    }
    /* Content nimmt volle Breite ein */
    #layoutSidenav_content,
    .sb-sidenav-content {
        margin-left: 0 !important;
        width: 100% !important;
        background-color: var(--light) !important;
    }

    .welcome-page {
        background: var(--light);
        min-height: 100vh;
        overflow-x: hidden;
        position: relative;
        z-index: 1;
        color: var(--text-main);
    }
    /* ===================== HERO SECTION ===================== */
    .hero-modern {
        position: relative;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 80px 20px;
        overflow: hidden;
    }

    .hero-background {
        position: absolute;
        inset: 0;
        background: radial-gradient(circle at 50% 50%, rgba(13, 110, 253, 0.05) 0%, transparent 60%);
    }

    .hero-content {
        position: relative;
        z-index: 2;
        text-align: center;
        max-width: 1200px;
    }

    .hero-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: #e7f1ff;
        border: 1px solid #b6d4fe;
        border-radius: 50px;
        padding: 8px 20px;
        margin-bottom: 30px;
        color: var(--primary);
        font-size: 0.9rem;
        font-weight: 600;
    }

    .hero-title {
        font-size: clamp(2.5rem, 8vw, 5rem);
        font-weight: 800;
        color: #000;
        margin-bottom: 20px;
        line-height: 1.1;
    }

    .gradient-text {
        background: linear-gradient(135deg, #0d6efd, #0a58ca);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .hero-subtitle {
        font-size: clamp(1rem, 2vw, 1.3rem);
        color: var(--text-muted);
        margin-bottom: 40px;
        line-height: 1.6;
        max-width: 700px;
        margin-left: auto;
        margin-right: auto;
        font-weight: 500;
    }

    .hero-buttons {
        display: flex;
        gap: 16px;
        justify-content: center;
        flex-wrap: wrap;
        margin-bottom: 60px;
    }

    .btn-cyber {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 14px 32px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        text-decoration: none;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

        .btn-cyber.btn-primary {
            background: var(--primary);
            color: #fff;
            border: 1px solid transparent;
        }

            .btn-cyber.btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(13, 110, 253, 0.3);
                background-color: #0b5ed7;
            }

        .btn-cyber.btn-secondary {
            background: #fff;
            border: 1px solid #dee2e6;
            color: #333;
        }

            .btn-cyber.btn-secondary:hover {
                border-color: #adb5bd;
                background-color: #f8f9fa;
                box-shadow: 0 4px 10px rgba(0,0,0,0.05);
            }

    /* HERO STATS */
    .hero-stats {
        display: flex;
        justify-content: center;
        gap: 40px;
        flex-wrap: wrap;
        margin-top: 40px;
    }

    .stat-item {
        text-align: center;
        padding: 20px;
        background: #ffffff;
        border: 1px solid #e0e0e0;
        border-radius: 12px;
        min-width: 140px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
    }

    .stat-number {
        font-size: 2rem;
        font-weight: 800;
        color: #000;
    }

    .stat-label {
        font-size: 0.85rem;
        color: var(--text-muted);
        margin-top: 5px;
        font-weight: 500;
    }
    /* FLOATING ELEMENTS */
    .floating-elements {
        position: absolute;
        inset: 0;
        pointer-events: none;
        z-index: 0;
    }

    .float-element {
        position: absolute;
        border-radius: 50%;
        background: radial-gradient(circle, rgba(13, 110, 253, 0.1), transparent);
        filter: blur(40px);
    }

    .float-1 { width: 300px; height: 300px; top: 10%; left: 10%; animation: float 8s ease-in-out infinite; }
    .float-2 { width: 200px; height: 200px; bottom: 20%; right: 15%; animation: float 6s ease-in-out infinite reverse; }
    .float-3 { width: 250px; height: 250px; top: 50%; right: 10%; animation: float 10s ease-in-out infinite; }

    @@keyframes float {
        0%, 100% { transform: translateY(0) translateX(0); }
        50% { transform: translateY(-20px) translateX(10px); }
    }
    /* ===================== PRICING SECTION ===================== */
    .pricing-section {
        padding: 100px 20px;
        background: #ffffff;
    }

    .section-header {
        text-align: center;
        margin-bottom: 60px;
    }

    .section-title {
        font-size: clamp(2rem, 5vw, 3.5rem);
        font-weight: 800;
        color: #000;
        margin-bottom: 15px;
    }

    .section-subtitle {
        font-size: 1.2rem;
        color: var(--text-muted);
    }

    .pricing-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 30px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .pricing-card {
        background: #ffffff;
        border: 1px solid #e0e0e0;
        border-radius: 20px;
        padding: 40px 30px;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
    }

        .pricing-card:hover {
            transform: translateY(-10px);
            border-color: #b6d4fe;
            box-shadow: 0 20px 50px rgba(13, 110, 253, 0.1);
        }

        .pricing-card.featured {
            border-color: var(--primary);
            transform: scale(1.05);
            box-shadow: 0 20px 50px rgba(13, 110, 253, 0.15);
            z-index: 10;
        }

    .popular-badge {
        position: absolute;
        top: 20px;
        right: 20px;
        background: var(--primary);
        color: #fff;
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .card-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .plan-icon {
        width: 70px;
        height: 70px;
        margin: 0 auto 20px;
        background: #e7f1ff;
        border: 1px solid #b6d4fe;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: var(--primary);
    }

    .card-header h3 {
        font-size: 1.8rem;
        font-weight: 700;
        color: #000;
        margin-bottom: 10px;
    }

    .plan-badge {
        display: inline-block;
        background: #f8f9fa;
        color: var(--text-muted);
        padding: 4px 12px;
        border-radius: 12px;
        font-size: 0.8rem;
        font-weight: 600;
        border: 1px solid #e0e0e0;
    }

    .price-section {
        text-align: center;
        margin-bottom: 30px;
        padding: 20px 0;
        border-top: 1px solid #f0f0f0;
        border-bottom: 1px solid #f0f0f0;
    }

    .currency {
        font-size: 1.5rem;
        color: var(--text-main);
        vertical-align: top;
    }

    .amount {
        font-size: 3rem;
        font-weight: 800;
        color: #000;
    }

    .period {
        font-size: 1rem;
        color: var(--text-muted);
        margin-left: 5px;
    }

    .features-list {
        list-style: none;
        margin-bottom: 30px;
    }

        .features-list li {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 0;
            color: #333;
            font-size: 0.95rem;
        }

            .features-list li i {
                font-size: 1.2rem;
                color: var(--primary);
            }

            .features-list li.disabled {
                opacity: 0.5;
                color: #999;
            }

                .features-list li.disabled i {
                    color: #ccc;
                }

    .btn-plan {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        width: 100%;
        padding: 14px 24px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        text-decoration: none;
        transition: all 0.3s;
    }

        .btn-plan.btn-gradient {
            background: var(--primary);
            color: #fff;
            box-shadow: 0 4px 15px rgba(13, 110, 253, 0.3);
        }

            .btn-plan.btn-gradient:hover {
                background: #0b5ed7;
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(13, 110, 253, 0.4);
            }

        .btn-plan.btn-outline {
            background: transparent;
            border: 2px solid #e0e0e0;
            color: var(--primary);
        }

            .btn-plan.btn-outline:hover {
                border-color: var(--primary);
                background: #eff6ff;
            }
    /* ===================== CTA SECTION ===================== */
    .cta-section {
        padding: 100px 20px;
    }

    .cta-card {
        max-width: 1000px;
        margin: 0 auto;
        background: #ffffff;
        border: 1px solid #e0e0e0;
        border-radius: 24px;
        padding: 60px 40px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 40px;
        position: relative;
        overflow: hidden;
        box-shadow: 0 20px 60px rgba(0,0,0,0.08);
    }

    .cta-content {
        flex: 1;
        position: relative;
        z-index: 2;
    }

        .cta-content h2 {
            font-size: clamp(1.8rem, 4vw, 2.5rem);
            font-weight: 800;
            color: #000;
            margin-bottom: 15px;
        }

        .cta-content p {
            font-size: 1.1rem;
            color: var(--text-muted);
            line-height: 1.6;
        }

    .cta-action {
        position: relative;
        z-index: 2;
    }

    .btn-cta {
        display: inline-flex;
        align-items: center;
        gap: 12px;
        padding: 16px 36px;
        background: var(--primary);
        color: #fff;
        font-weight: 700;
        font-size: 1.1rem;
        text-decoration: none;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(13, 110, 253, 0.4);
        transition: all 0.3s;
        white-space: nowrap;
    }

        .btn-cta:hover {
            background-color: #0b5ed7;
            transform: translateY(-3px);
            box-shadow: 0 8px 30px rgba(13, 110, 253, 0.5);
        }
    /* RESPONSIVE */
    @@media (max-width: 768px) {
        .hero-modern {
            min-height: auto;
            padding: 60px 20px;
        }

        .hero-stats {
            gap: 20px;
        }

        .stat-item {
            min-width: 100px;
            padding: 15px;
        }

        .pricing-grid {
            grid-template-columns: 1fr;
        }

        .pricing-card.featured {
            transform: scale(1);
        }

        .cta-card {
            flex-direction: column;
            text-align: center;
            padding: 40px 30px;
        }
    }
</style>