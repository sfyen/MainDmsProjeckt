@page
@model LoginModel
@{
    ViewData["Title"] = "Anmelden";
    ViewData["HideSidebar"] = true;
}
<div class="login-page">
    <div class="login-background">
        <div class="float-element float-1"></div>
        <div class="float-element float-2"></div>
        <div class="float-element float-3"></div>
    </div>
    <div class="login-container">
        <div class="login-card">
            <!-- LOGO & TITLE -->
            <div class="login-header">
                <div class="login-logo">
                    <i class="bi bi-shield-lock"></i>
                </div>
                <h1>Willkommen zurück</h1>
                <p>Melde dich an, um fortzufahren</p>
            </div>
            <!-- LOGIN FORM -->
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="alert-danger" role="alert"></div>

                <div class="form-group">
                    <label asp-for="Input.Email">Email-Adresse</label>
                    <div class="input-wrapper">
                        <i class="bi bi-envelope"></i>
                        <input asp-for="Input.Email" class="form-input" autocomplete="username" placeholder="name@example.com" style="padding-left: 60px !important;" />
                    </div>
                    <span asp-validation-for="Input.Email" class="error-message"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">Passwort</label>
                    <div class="input-wrapper">
                        <i class="bi bi-lock"></i>
                        <input asp-for="Input.Password" type="password" class="form-input" autocomplete="current-password" placeholder="••••••••" style="padding-left: 60px !important;" />
                    </div>
                    <span asp-validation-for="Input.Password" class="error-message"></span>
                </div>
                <div class="form-check">
                    <input class="form-check-input" asp-for="Input.RememberMe" type="checkbox" />
                    <label class="form-check-label" asp-for="Input.RememberMe">
                        Angemeldet bleiben
                    </label>
                </div>
                <button id="login-submit" type="submit" class="btn-login">
                    <span>Anmelden</span>
                    <i class="bi bi-arrow-right"></i>
                </button>
                <div class="login-links">
                    <a asp-page="./ForgotPassword" class="link-primary">
                        <i class="bi bi-key"></i>
                        Passwort vergessen?
                    </a>
                </div>
            </form>
            <!-- DIVIDER -->
            <div class="divider">
                <span>oder</span>
            </div>
            <!-- REGISTER LINK -->
            <div class="register-section">
                <p>Noch kein Konto?</p>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn-register">
                    <i class="bi bi-person-plus"></i>
                    <span>Jetzt registrieren</span>
                </a>
            </div>
            <!-- EXTERNAL LOGINS (Optional) -->
            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <div class="external-login-section">
                    <div class="divider">
                        <span>Mit anderem Dienst anmelden</span>
                    </div>
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="external-buttons">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" class="btn-external" name="provider" value="@provider.Name" title="Mit @provider.DisplayName anmelden">
                                    <i class="bi bi-@provider.Name.ToLower()"></i>
                                    @provider.DisplayName
                                </button>
                            }
                        </div>
                    </form>
                </div>
            }
            <!-- FOOTER LINKS -->
            <div class="login-footer">
                <a asp-page="./ResendEmailConfirmation" class="footer-link">
                    <i class="bi bi-envelope-check"></i>
                    E-Mail-Bestätigung erneut senden
                </a>
            </div>
        </div>
    </div>
</div>
<style>
    @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap');

    :root {
        --primary: #0d6efd;
        --secondary: #6c757d;
        --bg-color: #f5f7fa;
        --card-bg: #ffffff;
        --text-color: #000000;
        --text-muted: #6c757d;
        --border-color: #e0e0e0;
        --input-bg: #ffffff;
        --input-border: #ced4da;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Inter', sans-serif;
    }
    /* PAGE BACKGROUND */
    .login-page {
        min-height: 100vh;
        background: var(--bg-color);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        position: relative;
        overflow: hidden;
        color: var(--text-color);
    }
    /* FLOATING BACKGROUND (Subtle) */
    .login-background {
        position: absolute;
        inset: 0;
        pointer-events: none;
    }

    .float-element {
        position: absolute;
        border-radius: 50%;
        background: radial-gradient(circle, rgba(13, 110, 253, 0.1), transparent);
        filter: blur(50px);
    }

    .float-1 { width: 300px; height: 300px; top: -50px; left: -50px; animation: float 8s ease-in-out infinite; }
    .float-2 { width: 200px; height: 200px; bottom: 50px; right: 50px; animation: float 6s ease-in-out infinite reverse; }
    .float-3 { width: 400px; height: 400px; top: 50%; left: 50%; transform: translate(-50%, -50%); opacity: 0.05; }

    @@keyframes float {
        0%, 100% { transform: translateY(0) translateX(0); }
        50% { transform: translateY(-20px) translateX(10px); }
    }
    /* LOGIN CONTAINER */
    .login-container {
        position: relative;
        z-index: 2;
        width: 100%;
        max-width: 460px;
    }
    /* LOGIN CARD */
    .login-card {
        background: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 24px;
        padding: 40px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
    }
    /* HEADER */
    .login-header {
        text-align: center;
        margin-bottom: 35px;
    }

    .login-logo {
        width: 80px;
        height: 80px;
        margin: 0 auto 20px;
        background: #e7f1ff;
        border: 1px solid #b6d4fe;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        color: var(--primary);
    }

    .login-header h1 {
        font-size: 1.9rem;
        font-weight: 800;
        color: var(--text-color);
        margin-bottom: 8px;
    }

    .login-header p {
        color: var(--text-muted);
        font-size: 0.95rem;
    }
    /* FORM GROUPS */
    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            display: block;
            color: var(--text-color);
            font-weight: 600;
            font-size: 0.9rem;
            margin-bottom: 8px;
        }

    .input-wrapper {
        position: relative;
        display: flex;
        align-items: center;
    }

    .input-wrapper i {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: var(--text-muted);
        font-size: 1.2rem;
        pointer-events: none;
        z-index: 10;
    }

    .form-input {
        width: 100%;
        padding: 14px 16px 14px 60px !important;
        background: var(--input-bg);
        border: 1px solid var(--input-border);
        border-radius: 12px;
        color: var(--text-color);
        font-size: 1rem;
        transition: all 0.2s;
    }

        .form-input::placeholder {
            color: #adb5bd;
        }

        .form-input:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 4px rgba(13, 110, 253, 0.15);
        }
    /* CHECKBOX */
    .form-check {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 25px;
    }

    .form-check-input {
        width: 18px;
        height: 18px;
        border: 2px solid var(--input-border);
        border-radius: 4px;
        background: #fff;
        cursor: pointer;
    }

        .form-check-input:checked {
            background-color: var(--primary);
            border-color: var(--primary);
        }

    .form-check-label {
        color: var(--text-color);
        font-size: 0.9rem;
        cursor: pointer;
    }
    /* BUTTONS */
    .btn-login {
        width: 100%;
        padding: 14px 24px;
        background: var(--primary);
        color: #ffffff;
        border: none;
        border-radius: 12px;
        font-weight: 700;
        font-size: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        cursor: pointer;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(13, 110, 253, 0.25);
    }

        .btn-login:hover {
            background-color: #0b5ed7;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(13, 110, 253, 0.35);
        }

        .btn-login:active {
            transform: translateY(0);
        }
    /* LINKS */
    .login-links {
        text-align: center;
        margin-top: 20px;
    }

    .link-primary {
        color: var(--primary);
        text-decoration: none;
        font-size: 0.9rem;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        font-weight: 500;
    }

        .link-primary:hover {
            color: #0a58ca;
            text-decoration: underline;
        }
    /* DIVIDER */
    .divider {
        display: flex;
        align-items: center;
        margin: 30px 0;
        color: var(--text-muted);
        font-size: 0.85rem;
    }

        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            height: 1px;
            background: #e0e0e0;
        }

        .divider span {
            padding: 0 15px;
        }
    /* REGISTER SECTION */
    .register-section {
        text-align: center;
        margin-top: 25px;
    }

        .register-section p {
            color: var(--text-muted);
            margin-bottom: 12px;
            font-size: 0.9rem;
        }

    .btn-register {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 28px;
        background: #fff;
        border: 1px solid #dee2e6;
        border-radius: 12px;
        color: #333;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.2s;
    }

        .btn-register:hover {
            background: #f8f9fa;
            border-color: #ced4da;
            color: #000;
        }
    /* EXTERNAL LOGINS */
    .external-buttons {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .btn-external {
        width: 100%;
        padding: 12px 20px;
        background: #fff;
        border: 1px solid #dee2e6;
        border-radius: 10px;
        color: #333;
        font-weight: 600;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        cursor: pointer;
        transition: all 0.2s;
    }

        .btn-external:hover {
            background: #f8f9fa;
            border-color: #adb5bd;
        }
    /* FOOTER */
    .login-footer {
        text-align: center;
        margin-top: 25px;
        padding-top: 20px;
        border-top: 1px solid #f0f0f0;
    }

    .footer-link {
        color: var(--text-muted);
        text-decoration: none;
        font-size: 0.85rem;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

        .footer-link:hover {
            color: var(--primary);
        }
    /* ERROR MESSAGE */
    .error-message {
        display: block;
        color: #dc3545;
        font-size: 0.85rem;
        margin-top: 6px;
        font-weight: 500;
    }

    .alert-danger {
        background: #fff5f5;
        border: 1px solid #feb2b2;
        border-radius: 10px;
        padding: 12px 16px;
        color: #c53030;
        margin-bottom: 20px;
        font-size: 0.9rem;
    }
    /* RESPONSIVE */
    @@media (max-width: 480px) {
        .login-card {
            padding: 30px 25px;
        }

        .login-header h1 {
            font-size: 1.6rem;
        }

        .login-logo {
            width: 70px;
            height: 70px;
            font-size: 2rem;
        }
    }
</style>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}